<div class="header">
<h1>Burgers Bucket List</h1>

</div>



<div class="container">
  <div class="row">
    <div class="col-10 add">
<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> I've yet to try it!<br>
    <input type="radio" name="devoured" value="0"> I have had it before
  </div>

  <button class="fas fa-hamburger fa-2x" type="submit"></button>
</form>

    </div>
    <div class="col">
      
    </div>
  </div>
  <div class="row">
    <div class="col-5 had">
<h2>Burgers I have already had</h2>
<ul class="list-unstyled">
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>
 </div>
    <div class="col-5 try">
<h2>Burgers I plan to try</h2>

<ul class="list-unstyled">
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>
    </div>
    <div class="col-2"></div>
  </div>
</div>





